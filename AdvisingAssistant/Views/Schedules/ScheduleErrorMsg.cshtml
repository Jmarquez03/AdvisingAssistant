<h1>Schedule</h1>

<div>
    <p>
        The email you searched for could not be found. Please try again.
    </p>
</div>

@if (@User.Identity?.Name == "marco@advisor.edu" || @User.Identity?.Name == "nathan@advisor.edu")
{
    <p>
        Please input the email of the student who's Schedule you wish to see.
    </p>

    <form method="POST" asp-action="AdvisorMajor">
        <label for="email">Email Address:</label>
        <input type="email" id="email" name="email" required><br><br>
        <input type="submit" value="Submit">
    </form>
}
